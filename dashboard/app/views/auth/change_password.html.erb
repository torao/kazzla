<div class="row">
	<div class="span7">
		<%= form_tag("/auth/change_password", { :method => :post }) do %>
			<fieldset>
				<legend>Change Password</legend>
				<%= password_field_tag(:password, "", :placeholder => :password) %>
				<div>
					<%= submit_tag("Change Password", :class => "btn btn-primary") %>
					<%= link_to("Sign out", { :action => :signout }, {:class => "btn"}) %>
				</div>
			</fieldset>
		<% end %>
	</div>
</div>

