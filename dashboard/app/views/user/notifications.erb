<div class="row notifications">
	<div class="col-md-3">
		<%= render :partial => 'menu' %>
	</div>
	<div class="col-md-9">
		<div>
			<span class="label label-info">
				<%= @notifications.page * @notifications.items_per_page + 1 %> -
				<%= [ (@notifications.page + 1) * @notifications.items_per_page, @notifications.total ].min %> /
				<%= @notifications.total %>
			</span>
		</div>
		<div class="list-group">
		<% @notifications.notifications.each do |n| %>
				<a href="#" class="list-group-item notice-item <%= n.read_at.nil? ? 'unread-notice-item': '' %>" data-id="<%= n.id %>">
					<!-- <h4 class="list-group-item-heading"><%= h n.code %>(<%= h n.args %>)</h4> -->
					<p class="list-group-item-text <%= n.read_at.nil? ? '': 'text-muted' %>">
						<%= h n.code %>(<%= h n.args %>)
						<div class="pull-right">
							<small>
								from <%= h n.informant %>,
								<span title="<%= h absolute_time(n.created_at) %>"><%= h elapsed_time(n.created_at) %></span>
							</small>
						</div>
					</p>
				</a>
		<% end %>
		</div>
		<% unless @notifications.first? and @notifications.last? %>
		<nav>
			<ul class="pagination">
				<li class="<%= @notifications.first? ? 'disabled': '' %>">
					<%= link_to '<span aria-hidden="true">&laquo;</span><span class="sr-only">Previous</span>'.html_safe, { p: 0, ipp: @notifications.items_per_page }  %>
				</li>
				<% @notifications.paginate(7){ |i,active| %>
					<li class="<%= active ? 'active': '' %>">
						<%= link_to ((i+1).to_s + (active ? ' <span class="sr-only">(current)</span>': '')).html_safe, { p: i, ipp: @notifications.items_per_page }  %>
					</li>
				<% } %>
				<li class="<%= @notifications.last? ? 'disabled': '' %>">
					<%= link_to '<span aria-hidden="true">&raquo;</span><span class="sr-only">Next</span>'.html_safe, { p: @notifications.last_page, ipp: @notifications.items_per_page }  %>
				</li>
			</ul>
		</nav>
		<% end %>
	</div>
</div>
