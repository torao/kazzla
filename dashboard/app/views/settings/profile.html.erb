<div class="row">
	<div class="col-md-3">
		<%= render :partial => 'menu' %>
	</div>
	<div class="col-md-9">
		<%= form_for @profile, :as => :profile, :url => { :action => :profile }, :html => { :class => 'form-horizontal', :role => 'form' } do |f| %>
			<fieldset>
				<legend>Profile</legend>
				<div class="form-group">
					<div class="col-sm-2">
						<%= f.label(:image, 'Image', :class => 'control-label') %>
					</div>
					<div class="col-sm-10">
						<img src="<%= url_for(:controller => :user, :action => :profile_image, :id => @profile.account_id) %>" class="profile-icon"/>
						<%= f.file_field(:image) %>
					</div>
				</div>
				<div class="form-group">
					<div class="col-sm-2">
						<%= f.label(:name, 'Name', :class => 'control-label') %>
					</div>
					<div class="col-sm-6">
						<%= f.text_field(:name, { :class => 'form-control', :placeholder => 'Display Name' }) %>
					</div>
				</div>
				<div class="form-group">
					<div class="col-sm-2">
						<%= f.label(:bio, 'Bio', :class => 'control-label') %>
					</div>
					<div class="col-sm-6">
						<%= f.text_area(:bio, { :class => 'form-control', :placeholder => 'Biography' }) %>
					</div>
				</div>
				<div class="form-group">
					<div class="col-sm-2">
						<%= f.label(:location, 'Location', :class => 'control-label') %>
					</div>
					<div class="col-sm-6">
						<%= f.text_field(:location, { :class => 'form-control', :placeholder => 'Location' }) %>
					</div>
				</div>
				<div class="form-group">
					<div class="col-sm-2">
						<%= f.label(:url, 'Home URL', :class => 'control-label') %>
					</div>
					<div class="col-sm-6">
						<%= f.text_field(:url, { :class => 'form-control', :placeholder => 'http://' }) %>
					</div>
				</div>
				<div class="form-group">
					<div class="col-sm-offset-2 col-sm-6">
						<%= f.submit 'Update', :class => 'btn btn-default' %>
					</div>
				</div>
			</fieldset>
		<% end %>
	</div>
</div>
